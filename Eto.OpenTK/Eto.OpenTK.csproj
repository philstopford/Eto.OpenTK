<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net5.0</TargetFrameworks>
    <Title>OpenTK Control for Eto.Forms</Title>
    <Description>This provides the control to use in your Eto.Forms application.
Add the platform-specific package for each platform you wish to support. E.g. Eto.OpenTK.Gtk, Eto.OpenTK.Mac64, Eto.OpenTK.Wpf, etc.
    </Description>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Eto.Forms" Version="2.5.11" />
    <PackageReference Include="OpenTK" Version="3.2.0" Condition="$(TargetFramework.StartsWith('net4'))" />
    <PackageReference Include="OpenTK" Version="4.6.7" Condition="!$(TargetFramework.StartsWith('net4'))" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\LICENSE" Pack="True" PackagePath=".">
      <Link>Eto.OpenTK-LICENSE</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="..\AUTHORS" Pack="True" PackagePath=".">
      <Link>Eto.OpenTK-AUTHORS</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>